<!-- Adapter Configuration -->

<wl:adapter name="googleOtp" xmlns:wl="http://www.ibm.com/mfp/integration">

    <displayName>Google OTP Adapter</displayName>
    <description>Google Authenticator One-Time Password security check which able to validate passcode from Google Authenticator app</description>

   <JAXRSApplicationClass>com.ibm.mfp.sample.rest.GoogleOTPApplication</JAXRSApplicationClass>

    <property name="qrCodeOrgName" defaultValue="MFP"/>
    <property name="qrCodeEmail" defaultValue="user@mfp.com"/>

    <securityCheckDefinition name="googleOTP" class="com.ibm.mfp.sample.security.GoogleOTPSecurityCheck">
        <property name="successStateExpirationSec" displayName="Success Expiration (Sec)" defaultValue="20"/>
    </securityCheckDefinition>

    <securityCheckDefinition name="userLogin" class="com.ibm.mfp.sample.security.UserLoginSecurityCheck"/>

</wl:adapter>
