<mfp:adapter name="socialLogin"
             xmlns:mfp="http://www.ibm.com/mfp/integration"
             xmlns:http="http://www.ibm.com/mfp/integration/http">

	<displayName>Social Login adapter</displayName>
	<description>Contains integration with different login vendors.</description>

    <securityCheckDefinition name="socialogin" class="com.ibm.mfp.sample.socialogin.SocialLoginSecurityCheck">
        <property name="google.clientId"
                  defaultValue="145027708135-hmaa5h4q94rmbu37mndgaamll4p8s74a.apps.googleusercontent.com"
                  displayName="google client Id"
                  description="OAuth 2.0 client ID that was created for your server. Get it from the page
                  https://console.developers.google.com/projectselector/apis/credentials"/>
    </securityCheckDefinition>

    <securityCheckDefinition name="fakeLogin" class="com.ibm.mfp.sample.socialogin.FakeLoginSecurityCheck"/>

</mfp:adapter>
